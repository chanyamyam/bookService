<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/historyTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:background="@drawable/ic_baseline_cancel_24"
        android:id="@+id/historyKeywordDeleteButton"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/historyTextView"
        app:layout_constraintStart_toEndOf="@id/deleteTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="12dp"
        android:layout_height="12dp"/>

    <TextView
        android:id="@+id/deleteTextView"
        android:text="검색기록 삭제"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/historyKeywordDeleteButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/historyKeywordDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>